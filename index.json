const express = require('express');
const app = express();

// GET / route returns a simple message
app.get('/', (req, res) => {
  res.send('hiii from Nodejs App');
});

// Start the server
const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
  console.log(`Server is running on http://localhost:${PORT}`);
});

module.exports = app;
